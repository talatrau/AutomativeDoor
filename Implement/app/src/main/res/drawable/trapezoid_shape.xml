<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Colored rectangle-->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="350dp"
                android:height="40dp" />
            <solid android:color="#1F5EB888" />
            <stroke android:color="@color/orange" android:width="1dp"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>


    <!-- This rectangle for the lower arrow edge -->
    <!-- Its color should be the same as the layout's background -->
    <item
        android:top="60dp"
        android:bottom="-50dp"
        android:right="-250dp">
        <rotate
            android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="@color/blue_grey" />
                <stroke android:color="@color/orange" android:width="1dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:top="60dp"
        android:bottom="-50dp"
        android:left="-250dp">
        <rotate
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/blue_grey" />
                <stroke android:color="@color/orange" android:width="1dp" />
            </shape>
        </rotate>
    </item>

</layer-list>