<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <TextView
        android:id="@+id/speaker_name"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:text="loa truoc"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"/>

    <ImageView
        android:id="@+id/stream_speaker_img"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/speaker_icon"
        android:visibility="invisible"
        android:layout_toLeftOf="@+id/speaker_seekbar"
        android:layout_below="@+id/speaker_name"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="15dp" />

    <SeekBar
        android:id="@+id/speaker_seekbar"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/speaker_name"
        android:max="100"
        android:layout_marginBottom="15dp"
        android:paddingTop="5dp"/>

    <Button
        android:id="@+id/speaker_confirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speaker_seekbar"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:background="@color/blue_grey"
        android:text="Confirm" />

</RelativeLayout>