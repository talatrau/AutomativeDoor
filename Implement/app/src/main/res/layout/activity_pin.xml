<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey"
    android:orientation="vertical"
    tools:context=".pin">

    <RelativeLayout
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:background="@drawable/pin_round_label" >

        <TextView
            android:id="@+id/pin_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your PIN code"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/pin_txt_1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/underline_border"
            android:text=""
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:layout_below="@+id/pin_label" />

        <TextView
            android:id="@+id/pin_txt_2"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/underline_border"
            android:text=""
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_below="@+id/pin_label"
            android:layout_toRightOf="@+id/pin_txt_1"/>

        <TextView
            android:id="@+id/pin_txt_3"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/underline_border"
            android:text=""
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_below="@+id/pin_label"
            android:layout_toRightOf="@+id/pin_txt_2"/>

        <TextView
            android:id="@+id/pin_txt_4"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/underline_border"
            android:text=""
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_below="@+id/pin_label"
            android:layout_toRightOf="@+id/pin_txt_3"/>

        <TextView
            android:id="@+id/pin_txt_5"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/underline_border"
            android:text=""
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_below="@+id/pin_label"
            android:layout_toRightOf="@+id/pin_txt_4"/>

        <TextView
            android:id="@+id/pin_txt_6"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/underline_border"
            android:text=""
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_below="@+id/pin_label"
            android:layout_toRightOf="@+id/pin_txt_5"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="350dp"

        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp">

    <Button
        android:id="@+id/pin_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_circle"
        android:text="1"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/pin_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_circle"
        android:text="2"
        android:textSize="30dp"
        android:layout_toRightOf="@+id/pin_1"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/pin_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_circle"
        android:text="3"
        android:textSize="30dp"
        android:layout_toRightOf="@id/pin_2"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/pin_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_circle"
        android:text="4"
        android:textSize="30dp"
        android:layout_below="@id/pin_1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/pin_5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_circle"
        android:text="5"
        android:textSize="30dp"
        android:layout_below="@id/pin_1"
        android:layout_toRightOf="@id/pin_4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/pin_6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_circle"
        android:text="6"
        android:textSize="30dp"
        android:layout_below="@id/pin_1"
        android:layout_toRightOf="@id/pin_5"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/pin_7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_circle"
        android:text="7"
        android:textSize="30dp"
        android:layout_below="@id/pin_4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/pin_8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_circle"
        android:text="8"
        android:textSize="30dp"
        android:layout_below="@id/pin_4"
        android:layout_toRightOf="@id/pin_7"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/pin_9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_circle"
        android:text="9"
        android:textSize="30dp"
        android:layout_below="@id/pin_4"
        android:layout_toRightOf="@id/pin_8"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/pin_del"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:scaleType="fitXY"
        android:src="@drawable/pin_delete"
        android:layout_marginRight="50dp" />

</LinearLayout>